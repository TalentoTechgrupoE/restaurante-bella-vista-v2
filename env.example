# Configuración del Restaurante Bella Vista
# Copiar a .env y ajustar valores según necesidades

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
POSTGRES_DB=bella_vista
POSTGRES_USER=restaurante
POSTGRES_PASSWORD=bella123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
APP_PORT=3000
APP_HOST=0.0.0.0
NODE_ENV=production

# Habilitar métricas para monitoreo
ENABLE_METRICS=true
METRICS_PORT=3000

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=bella123
GRAFANA_ALLOW_SIGN_UP=false

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# cAdvisor
CADVISOR_PORT=8080

# Node Exporter
NODE_EXPORTER_PORT=9100

# PostgreSQL Exporter
POSTGRES_EXPORTER_PORT=9187

# ========================================
# CONFIGURACIÓN DE ALERTAS
# ========================================

# Umbrales de negocio
ALERT_INGRESOS_MINIMOS=500          # Euros mínimos por día
ALERT_PEDIDOS_MAXIMOS_COCINA=20     # Máximo pedidos en cocina
ALERT_PEDIDOS_RETRASADOS=3          # Máximo pedidos retrasados
ALERT_MESAS_CASI_LLENO=18           # Mesas ocupadas para alerta

# Umbrales técnicos
ALERT_MEMORY_THRESHOLD=90           # % máximo uso memoria
ALERT_CPU_THRESHOLD=80              # % máximo uso CPU
ALERT_DB_CONNECTIONS_MAX=80         # Máximo conexiones DB
ALERT_ERROR_RATE_MAX=5              # Máximo errores por minuto

# Umbrales financieros
ALERT_ERROR_PAGO_THRESHOLD=5        # % máximo errores pago
ALERT_TICKET_MINIMO=15              # Ticket promedio mínimo (euros)

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================

# Slack (opcional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#restaurante-alertas

# Email (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=gerente@bellavista.com

# SMS (opcional)
SMS_API_KEY=
SMS_PHONE_NUMBER=+34666123456

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

# Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Datos de prueba
GENERATE_SAMPLE_DATA=false
SAMPLE_DATA_INTERVAL=30             # Segundos entre generación de datos

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# JWT (si se implementa autenticación)
JWT_SECRET=your-super-secret-key-here
JWT_EXPIRE=24h

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW=15               # Minutos
RATE_LIMIT_MAX_REQUESTS=100        # Requests por ventana

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================

# Backup automático de PostgreSQL
BACKUP_ENABLED=false
BACKUP_INTERVAL=daily              # daily, weekly, monthly
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ========================================
# CONFIGURACIÓN DE RENDIMIENTO
# ========================================

# Caché
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Pool de conexiones PostgreSQL
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Compresión
GZIP_ENABLED=true
GZIP_LEVEL=6

# ========================================
# CONFIGURACIÓN ESPECÍFICA DEL RESTAURANTE
# ========================================

# Información del restaurante
RESTAURANT_NAME="Bella Vista"
RESTAURANT_ADDRESS="Calle Principal 123, Ciudad"
RESTAURANT_PHONE="+34 912 345 678"
RESTAURANT_EMAIL=info@bellavista.com

# Horarios
OPENING_TIME=12:00
CLOSING_TIME=23:00
BREAK_START=16:00
BREAK_END=19:00

# Capacidad
MAX_TABLES=20
MAX_SEATS_PER_TABLE=6
AVERAGE_MEAL_DURATION=45           # Minutos

# Objetivos de negocio
DAILY_REVENUE_TARGET=2000          # Euros
MONTHLY_REVENUE_TARGET=60000       # Euros
DAILY_CUSTOMERS_TARGET=80
AVERAGE_TICKET_TARGET=25           # Euros
